.container-fluid
  .row
    .col-sm
    .col-sm.col-md-8.col-lg-5
      %dl.row.mb-2
        %dt.col-sm-7.my-2#event-title&= event.name
        %dd.col-sm-5.my-2
        %dt.col-sm-2.my-2 What:
        %dd.col-sm-10.my-2
          %p&= event.description
        %dt.col-sm-2.my-2 Where: 
        %dd.col-sm-10.my-2
          %p #{ event.location }
        %dt.col-sm-2.my-2 When:
        %dd.col-sm-10.my-2 
          %p #{ event.date }, #{ event.time }
      .my-5
        - if @current_user.id == @event.user_id
          .my-2
            = render 'invitation'
        - if !event.invited.any?
          %h5 You haven't invited anyone yet.
        - if event.invited.any?
          %h3 Invited:
          - event.invited.each do |attendee|
            %p&= attendee
    .col-sm
