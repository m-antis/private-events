= form_with model: @event, url: user_events_path(@current_user), class: "input-group" do |form|
  .col.justify-content-center
    .row-md-2
      .col-md.justify-content-center{style: "padding: 0"}
        %h2 Create Event
    .d-grid.gap-1
      .p-2
        = form.label :name, class: "form-label"
        = form.text_field :name, class: "form-control"
    .d-grid.gap-1
      .p-2
        = form.label :description, class: "form-label"
        = form.text_area :description, rows: 3, class: "form-control", style: "resize: none" 
    .d-grid.gap-1        
      .p-2            
        = form.label :time, class: "form-label"
        = form.time_select :time, prompt: true, minute_step: 30, class: "form-control"
    .d-grid.gap-1
      .p-2              
        = form.label :date, class: "form-label"
        = form.date_field :date, min: Date.today, class: "form-control"
    .d-grid.gap-1
      .p-2              
        = form.label :location, class: "form-label"
        = form.text_field :location, class: "form-control"
    .d-grid.gap-1
      .p-2
        = form.submit 'Create', class: "btn btn-primary"
