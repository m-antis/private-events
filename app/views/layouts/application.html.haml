!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title PrivateEvents
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container-fluid
        = link_to 'Britevent', root_path, class: "navbar-brand"
        %button.navbar-toggler.collapsed{type: "button", data: { "bs-toggle": "collapse", "bs-target": "#navbarNav" }, aria: { "controls": "navbarNav", "expanded": "false", "label": "Toggle navigation"}}
          %span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          %ul.navbar-nav.me-auto.mb-2.mb-lg-0
            %li.nav-item 
              = link_to 'Profile', user_path(@current_user), class: "nav-link text-end" if @current_user
            %li.nav-item
              = link_to 'Events', events_path, class: "nav-link text-end"
            %li.nav-item
              = link_to 'Login', login_path, class: "nav-link text-end" unless @current_user
            %li.nav-item
              = link_to 'Logout', logout_path, class: "nav-link text-end" if @current_user
    - flash.each do |type, message|
      .alert{:class => "#{bootstrap_class_for(type)}"}
        = message
    = yield
