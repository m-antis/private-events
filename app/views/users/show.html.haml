.container-fluid
  .row
    .col-sm
    .col-sm-8.col-md-8.col-lg-5
      %h2 #{ @user.name }
      .col.justify-content-center
        .row-md-2
          .col-md.justify-content-center{style: "padding: 0"}
            .d-grid.gap-1
              .p-2
                %h3 Events Hosting
                - @user.events.each do |event|
                  = link_to event.name, event_path(event.id), class: "list-group-item-info list-group-item list-group-item-action"
                  %br
                %h3 Event Invitations
                - @user.invitations.select(:event_id).each do |invitation|
                  = link_to Event.find_by_id(invitation.event_id).name, event_path(invitation.event_id), class: "list-group-item-warning list-group-item list-group-item-action"
                  %br
                = link_to 'Create event', new_event_path, class: "btn btn-primary"
                = link_to 'Logout', session_path, method: :delete, class: "btn btn-warning"
    .col-sm
